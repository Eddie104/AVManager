<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="150" height="320" verticalAlign="bottom" gap="0" visible="false">
	<fx:Script>
		<![CDATA[
			import org.avManager.model.data.VideoData;
			import org.libra.utils.DateUtil;
			
			[Bindable]
			private var _videoData:VideoData;
			
			public function set videoData(val:VideoData):void{
				_videoData = val;
				this.visible = _videoData ? true : false;
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:HGroup horizontalAlign="center" width="100%" height="200">
		<s:Image width="100%" height="100%" source="{_videoData ? _videoData.coverSub : null}"/>
	</s:HGroup>
	<s:Label width="100%" height="24" text="{_videoData ? _videoData.videoID : '--'}" textAlign="center" verticalAlign="middle"/>
	<s:Label width="100%" height="24" text="{_videoData ? _videoData.name : '--'}" textAlign="center" verticalAlign="middle"/>
	<s:HGroup width="100%" height="24" paddingLeft="6" paddingRight="6" verticalAlign="middle">
		<s:Label width="30" height="100%" text="年份:" verticalAlign="middle"/>
		<s:Label width="100%" height="100%" text="{_videoData ? DateUtil.toString(_videoData.date) : '--'}" verticalAlign="middle" id="_date"/>
	</s:HGroup>
	<s:HGroup width="100%" height="48" paddingLeft="6" paddingRight="6" verticalAlign="middle">
		<s:Label width="30" height="100%" text="类型:" verticalAlign="middle"/>
		<s:Label width="100%" height="100%" text="{_videoData ? _videoData.getClassificationStr() : '--'}" verticalAlign="middle" id="_genres"/>
	</s:HGroup>
</s:VGroup>
